<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_6.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Blue" Padding="30" CornerRadius="0">
            <Label Text="Banking App" HorizontalTextAlignment="Center" TextColor="White" FontSize="40"/>
        </Frame>
        <Entry x:Name="amountDeopsit" Keyboard="Numeric" Placeholder="Please enter amount to deposit"/>
        <Entry x:Name="reasonDeposit" Placeholder="Enter reason" Margin="0,24,0,0" MaxLength="32" WidthRequest="500"/>
        <Button Text="Deposit" Clicked="Button_Clicked"/>
        <Entry x:Name="amountWithdraw" Keyboard="Numeric" Placeholder="Please enter amount to withdraw"/>
        <Entry x:Name="withdrawReason" Placeholder="Enter reason" Margin="0,24,0,0" MaxLength="32" WidthRequest="500"/>

        <Button Text="Withdraw" Clicked="Button_Clicked_WithdrawButton"/>

        <Button Text="Display transactions" Clicked="Button_Clicked_TransactionButton"/>
        <Label x:Name="TransactionHistory" HorizontalTextAlignment="Center"/>

    </StackLayout>

</ContentPage>
